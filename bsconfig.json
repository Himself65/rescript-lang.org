{
  "$schema": "https://raw.githubusercontent.com/rescript-lang/rescript-compiler/master/docs/docson/build-schema.json",
  "name": "rescript-lang.org",
  "namespace": false,
  "reason": {
    "react-jsx": 3
  },
  "refmt": 3,
  "bs-dependencies": [
    "reason-react",
    "bs-fetch",
    "@glennsl/bs-json",
    "reason-promise"
  ],
  "ppx-flags": [],
  "sources": [
    {
      "dir": "common"
    },
    {
      "dir": "bindings"
    },
    {
      "dir": "pages",
      "subdirs": true
    },
    {
      "dir": "re_pages",
      "subdirs": true
    },
    {
      "dir": "scripts",
      "subdirs": true,
      "type": "dev"
    },
    {
      "dir": "components",
      "subdirs": true
    },
    "layouts"
  ],
  "package-specs": {
    "module": "es6",
    "in-source": true
  },
  "warnings": {
    "error": "+8"
  },
  "suffix": ".js",
  "bsc-flags": [
    "-bs-super-errors",
    "-bs-g"
  ],
  "gentypeconfig": {
    "language": "untyped",
    "shims": [],
    "module": "es6"
  }
}
